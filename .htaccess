# Aktifkan mod_rewrite
RewriteEngine On

# 1. Redirect /index atau /index.php ke root domain
RewriteCond %{THE_REQUEST} /index(\.php)? [NC]
RewriteRule ^index(\.php)?$ https://pekapeduli.org/ [R=301,L]

# 2. Hilangkan .php dari URL untuk file lain
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.php [L]
